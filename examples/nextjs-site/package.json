  "devDependencies": {
    "@eventual/cli": "^0.15.1",
    "@tsconfig/node16": "^1",
    "@types/jest": "^29",
    "@types/node": "^16",
    "esbuild": "^0.16.14",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  }
}
